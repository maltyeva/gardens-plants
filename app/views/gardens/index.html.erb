<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1483809715206-0499044b5b69?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80);">
  <div class="container">
    <h1>My Secret Gardens App</h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @gardens.each do |garden| %>
      <div class="col-4 mt-2">
        <%= link_to garden_path(garden) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path garden.banner_url %>)">
            <%= garden.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<br>
<%= link_to 'New Garden', new_garden_path %>
