<ul>
  <% @garden.plants.each do |plant| %>
    <li>
      <%= plant.name %>
      <%= link_to plant_path(plant), method: "delete", data: {confirm: "Are you suuuure?"} do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </li>
  <% end %>
</ul>
