<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <h1>Add a Plant</h1>
      <!-- gardens/2/plants/new -->
      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.submit "Add a Plant!", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>